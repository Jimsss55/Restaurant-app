<h1>Users</h1>

<div class="apple_pagination">
  <%= will_paginate @users, :container => false %>
</div>

<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Email</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <td>
        <%= link_to 'Edit', edit_user_registration_path(user) %> <!-- Adjust as necessary -->
        <%= link_to 'Destroy', users_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Create New User', new_user_registration_path %>