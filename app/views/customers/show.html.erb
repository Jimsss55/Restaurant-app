<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <h1 class="flex justify-center font-bold text-2xl">Customer Details</h1>

    <p>
      <strong>Customer Name: </strong>
      <%= @customer.customer_name %>
    </p>

    <% if @customer.customer_tables.any? %>
    <p>
      <strong>Customer Table Number: </strong>
      <strong><%= @customer.customer_tables.map(&:customer_table_number).join(',') %></strong>
    </p>
      <%elsif @customer.customer_table.present?%>
      <p>
        <strong>Customer Table Number: </strong>
        <%= @customer.customer_table.customer_table_number %>
      </p>
      <%else %>
    <P>No Customer table</P>
    <% end %>


    <h1 class="mt-5 flex justify-center font-bold text-2xl">Order Items</h1>

    <% if @order_items%>
      <table class="mt-3 table-auto px-5 bg-white border border-gray-300">
        <thead class="bg-pink-500 text-white">
          <tr>
            <th>Menu Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total (Nu)</th>
            <% unless @customer.payment_status == "Payment Done" %>
              <th>Action</th>
            <%end %>
          </tr>
        </thead>

        <tbody>
          <% @order_items.each do |order_item| %>
          <tr>
            <td class="border border-gray-300 px-4 py-2"><%= order_item.menu_item.menu_items if order_item.menu_item %></td>
            <td class="border border-gray-300 px-4 py-2"><%= order_item.quantity %></td>
            <td class="border border-gray-300 px-4 py-2"><%= order_item.menu_item.menu_item_price %></td>
            <td class="border border-gray-300 px-4 py-2"><%= number_with_precision(order_item.menu_item.menu_item_price * order_item.quantity, precision: 2)%></td>
            <% unless @customer.payment_status == "Payment Done" %>
              <td class="border border-gray-300 px-4 py-2"><%= link_to "Edit",
                                                                     edit_customer_order_item_path(@customer.id, order_item, {source: @source}),
                                                                     class: "ml-2 rounded-lg py-3 px-5 bg-green-300
                                                                     inline-block font-medium" %>
              </td>
            <%end %>
          </tr>
          <% end %>
          <tr>
            <td colspan="3" class="border border-gray-300 px-4 py-2"><strong>Grand Total</strong></td>
            <td colspan="2" class="border border-gray-300 px-4 py-2">Nu.
              <%= controller_name == "payment_details" ? @total_payment : @grand_total %>
            </td>
          </tr>
        </tbody>
      </table>
    <%end %>

    <div class="mt-5 flex justify-center">
      <% unless @customer.payment_status == "Payment Done" %>
        <%= link_to "Add Order Items", new_customer_order_item_path(@customer, {source: @source}), class: "ml-2 rounded-lg py-3 px-5 bg-green-300
        inline-block font-medium" %>
      <%end %>

      <%= link_to (@source.present? ? "Back to Customer Detail" : "Back to Customers"),
                  (@source.present? ? customer_path(@customer) : customers_path),
                  class: "ml-2 rounded-lg py-3 px-5 bg-gray-300 inline-block font-medium" %>
    </div>


<!--    Popup for payment method-->
    <% unless controller_name == 'payment_details' %>
      <% unless @customer.payment_status == "Payment Done"%>
        <% unless @grand_total == 0 %>
        <div data-controller="popup" class="flex justify-center inline-block ml-2">
          <button data-action="click->popup#openPopup" class="mt-2 rounded-lg py-3 px-5 bg-red-100 font-medium">Checkout this customer</button>
          <%= render "shared/popup", controller_name: "popup" do%>
            <h1 class="flex justify-center font-bold ">What is the Customer Payment Method ?</h1>
            <div class="flex justify-center">
              <%= link_to "Online Payment", new_customer_payment_detail_path(@customer, payment: "online_payment"),
                          class: "mt-2 ml-2 rounded-lg py-3 px-5 bg-green-300 hover:bg-green-200 inline-block font-medium" %>
              <%= link_to "Cash", new_customer_payment_detail_path(@customer),
                          class: "mt-2 ml-2 rounded-lg py-3 px-5 bg-gray-300 inline-block font-medium" %>
            </div>
            <%end %>
          <% end %>
        </div>
        <%end %>
    <% end %>
  </div>
</div>
