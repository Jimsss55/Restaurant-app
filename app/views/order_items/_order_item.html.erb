<div class="flex justify-center">

<!--  <div class="flex justify-center items-center">-->
<!--      <h1 class="font-bold text-4xl">For Customer:<%#=order_item.customer_id %></h1>-->
<!--  </div>-->

  <table class="mt-3 table-auto px-5 bg-white border border-gray-300">
    <thead class="bg-pink-500 text-white">
      <tr>
        <th class="border border-gray-300 px-4 py-2">Customer Id</th>
        <th class="border border-gray-300 px-4 py-2">Menu Item Id</th>
        <th class="border border-gray-300 px-4 py-2">Quantity</th>
        <th class="border border-gray-300 px-4 py-2">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @order_items.each do |order_item|  %>
        <tr>
          <td class="border border-gray-300 px-4 py-2"><%= order_item.customer_id %></td>
          <td class="border border-gray-300 px-4 py-2"><%= order_item.menu_item_id %></td>
          <td class="border border-gray-300 px-4 py-2"><%= order_item.quantity %></td>
          <td class="border border-gray-300 px-4 py-2">
            <div class="flex justify-between">
              <%= link_to "Edit this order item", edit_order_item_path(order_item),
                          class: "ml-2 rounded-lg py-3 px-5 bg-indigo-100 inline-block font-medium" %>
              <%= button_to "Delete this order item", order_item, method: :delete, data: {turbo_confirm: "Are you sure?"},
                            class: "ml-2 rounded-lg py-3 px-5 bg-red-100 inline-block font-medium" %>
            </div>
          </td>
        </tr>
      <%end %>
    </tbody>
  </table>
</div>

<div class="mt-5 flex justify-center">
  <%= link_to "Add new order items", new_order_item_path,
              class: "ml-2 rounded-lg py-3 px-5 bg-green-300 inline-block font-medium"%>
</div>
