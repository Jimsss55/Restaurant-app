<%= form_with(model: menu_item, class: "contents") do |form| %>
  <% if menu_item.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(menu_item.errors.count, "error") %> prohibited this menu_item from being saved:</h2>

      <ul>
        <% menu_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :menu_items, "Menu Item"%>
    <%= form.text_field :menu_items%>
  </div>

  <div>
    <%= form.label :menu_item_price, "Price"%>
    <%= form.number_field :menu_item_price, in: 1.0..1000.0%>
  </div>

  <div class="inline">
    <%= form.button class: "mt-3 rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
