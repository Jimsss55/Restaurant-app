<%= form_with(model: menu_item, class: "contents") do |form| %>
  <% if menu_item.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(menu_item.errors.count, "error") %> prohibited this menu_item from being saved:</h2>

      <ul>
        <% menu_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <strong><%= form.label :menu_items, "Menu Item"%></strong>
    <%= form.text_field :menu_items, placeholder: "Enter menu item name",
                        class: "mt-1 block px-3 py-1 bg-white border border-slate-300 rounded-md text-sm
                        shadow-sm focus:outline-none focus:border-red-100 focus:ring-1 focus:ring-sky-500" %>
  </div>

  <div>
    <strong><%= form.label :menu_item_price, "Price"%></strong>
    <%= form.number_field :menu_item_price, in: 1.0..1000.0, placeholder: "Enter price",
                          class: "mt-1 block px-3 py-1 bg-white border border-slate-300 rounded-md text-sm shadow-sm
                          focus:outline-none focus:border-red-100 focus:ring-1 focus:ring-sky-500" %>
  </div>

  <div class="inline">
    <%= form.button class: "mt-3 rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
