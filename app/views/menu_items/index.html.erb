<div class="mx-auto w-full">
  <% content_for :title, "Menu items" %>

  <div>
    <%= render 'layouts/navigation' %>
  </div>

  <div class="flex justify-center items-center mt-5">
    <h1 class="font-bold text-4xl">Menu items</h1>
  </div>

  <table class="mt-3 table-auto px-5 bg-white border border-gray-300 mx-auto">
    <thead class="bg-pink-500 text-white customers_thead">
    <tr>
      <th> Item </th>
      <th> Price (Nu) </th>
      <th> Action </th>
    </tr>
    </thead>

    <tbody>
    <% @menu_items.each do |menu_item| %>
      <tr>
        <td class="border border-gray-300 px-4 py-2 "><%= menu_item.menu_items %></td>
        <td class="border border-gray-300 px-4 py-2 "><%= menu_item.menu_item_price %></td>

        <td class="border border-gray-300 px-4 py-2"><%= link_to "Show this Menu item", menu_item,
                                                                 class: "mt-1 ml-1 rounded-lg py-3 px-5 bg-gray-200
                                                                       hover:bg-gray-100 inline-block font-medium" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="apple_pagination mt-3">
    <%= will_paginate @menu_items, :container => false %>
  </div>

  <div class="flex justify-center">
    <%= link_to "Add new Menu Item", new_menu_item_path,
                class: "mt-3 ml-2 rounded-lg py-3 px-5 bg-green-300 inline-block font-medium"%>
  </div>
</div>
