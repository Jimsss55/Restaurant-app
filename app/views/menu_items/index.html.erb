<div class="mx-auto w-full">
  <% content_for :title, "Menu items" %>

  <div>
    <%= render 'layouts/navigation' %>
  </div>

  <div class="flex justify-center items-center">
    <h1 class="font-bold text-4xl">Menu items</h1>
  </div>

  <div class="apple_pagination">
    <%= will_paginate @menu_items, :container => false %>
  </div>

  <div class="mt-2 grid grid-cols-3 mx-8">
    <h1 class="font-bold text-2xl">Item</h1>
    <h2 class="font-bold text-2xl">Price (Nu)</h2>
  </div>

  <div id="menu_items" class="w-full">
    <% @menu_items.each do |menu_item| %>
      <div class="grid grid-cols-3 mx-8">
        <h3><%= menu_item.menu_items %></h3>
        <h3><%= menu_item.menu_item_price %></h3>
        <p>
          <%= link_to "Show this menu item", menu_item, class: "mt-1 ml-2 rounded-lg py-3 px-5 bg-green-100 inline-block font-medium" %>
        </p>
      </div>
    <% end %>
  </div>

  <div class="apple_pagination">
    <%= will_paginate @menu_items, :container => false %>
  </div>

  <div class="flex justify-center">
    <%= link_to "Add new Menu Item", new_menu_item_path,
                class: "mt-3 ml-2 rounded-lg py-3 px-5 bg-green-300 inline-block font-medium"%>
  </div>
</div>
