<%= form_with(model: customer_table, class: "contents") do |form| %>
  <% if customer_table.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(customer_table.errors.count, "error") %> prohibited this customer_table from being saved:</h2>

      <ul>
        <% customer_table.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <strong><%= form.label :customer_table_number, "Customer Table Number"%></strong>
    <%= form.number_field :customer_table_number, in: 1..50, placeholder: "Table Number",
                          class: "mt-2 block md:w-2/3 px-4 py-2 bg-gray-100 border border-gray-300 text-gray-700
                          rounded-lg text-sm shadow-sm focus:outline-none focus:ring-2 focus:ring-sky-500
                          focus:border-sky-500 transition duration-200" %>
  </div>

  <div class="inline">
    <%= form.submit class: "mt-2 rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
