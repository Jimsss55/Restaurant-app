<div class="mx-auto w-full">
  <% content_for :title, "Customer Tables" %>

  <div>
    <%= render 'layouts/navigation' %>
  </div>

  <div class="flex justify-center items-center mt-5">
    <h1 class="font-bold text-4xl">Customer Tables</h1>
  </div>

  <table class="mt-3 table-auto px-5 bg-white border border-gray-300 mx-auto">
    <thead class="bg-pink-500 text-white customers_thead">
    <tr>
      <th> Table Number </th>
      <th> Action </th>
    </tr>
    </thead>

    <tbody>
    <% @customer_tables.each do |table| %>
      <tr>
        <td class="border border-gray-300 px-4 py-2 "><%= table.customer_table_number %></td>
        <td class="border border-gray-300 px-4 py-2"><%= link_to "Show this Customer table", table,
                                                                 class: "mt-1 ml-1 rounded-lg py-3 px-5 bg-gray-200
                                                                       hover:bg-gray-100 inline-block font-medium" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <div class="apple_pagination mt-3">
    <%= will_paginate @customer_tables, :container => false %>
  </div>

  <div class="mt-2 flex inline-block items-center justify-center">
    <p>
      <%= link_to "Add Customer table", new_customer_table_path, class: "ml-2 rounded-lg py-3 px-5 bg-green-300
      inline-block font-medium"  %>
    </p>
  </div>
</div>

