<div class="mx-auto w-full">
  <% content_for :title, "Customer Tables" %>

  <div>
    <%= render 'layouts/navigation' %>
  </div>

  <div class="apple_pagination">
    <%= will_paginate @customer_tables, :container => false %>
  </div>

  <div class="flex justify-center items-center">
    <h1 class="font-bold text-4xl">Customer Tables</h1>
  </div>

  <div class="mt-2 grid grid-cols-3 mx-8">
    <h1 class="font-bold text-2xl">Table No</h1>
  </div>

  <div id="customer_table" class="w-full">
    <% @customer_tables.each do |table| %>
      <div class="grid grid-cols-3 mx-8 px-4 py-2">
        <h3>Table Number: <%= table.customer_table_number %></h3>
        <p>
          <%= link_to "Show this Customer table", table, class: "ml-2 rounded-lg py-3 px-5 bg-gray-300 inline-block font-medium" %>
        </p>
      </div>
    <% end %>
  </div>

  <div class="apple_pagination">
    <%= will_paginate @customer_tables, :container => false %>
  </div>

  <div class="mt-2 flex inline-block items-center justify-center">
    <p>
      <%= link_to "Add Customer table", new_customer_table_path, class: "ml-2 rounded-lg py-3 px-5 bg-green-300
      inline-block font-medium"  %>
    </p>
  </div>
</div>

